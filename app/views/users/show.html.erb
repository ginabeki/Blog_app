<div>
    <div>
        <%= image_tag(@user.photo || '', class: "user_image") %>
        <div>
            <h2><%= @user.name %></h2>
            <span>Number of posts: <%= @user.posts.count %> </span>
        </div>
    </div>
    <div>
        <h3>Bio</h3>
        <span>
            <%= @user.bio %>
        </span>
    </div>

    <div>
        <%= render partial: 'partials/post', collection: @user.three_most_recent_posts, as: :post %>
    </div>
    <button>
    <a href="/users/<%= @user.id %>/posts">See all posts</a>
    </button>
</div>